
public class TesteConexao {

	public static void main(String[] args) {
		
		//try com AutoCloseable já realiza o fechamento da conexão somente com o try, não precisa de finally
		
		try(Conexao conexao = new Conexao()){
			conexao.leDados();
		} catch(IllegalStateException ex) {
			System.out.println("Deu erro na conexão!");
		}
		
		
		
		
//----------------------------------------------		
		
//		Conexao con = null;
//		try {
//			con = new Conexao();
//			con.leDados();
//		}catch(IllegalStateException ex) {
//			System.out.println("Deu erro na conexão!");
//		}finally {
//			con.close();
//		}
		
	}

}



// O finally no fim sempre realiza a ação entre {} 
// independente de acontecer ou não o erro!!!
// try apenas com finally é válido também, sem catch